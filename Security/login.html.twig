{% extends "user/layout.html.twig" %}

{% block search_main %}
{% endblock %}

{% block user_content %}
<style>
    body {
        background-color: #f3f7fd;
    }
</style>

<div class="col-xs-12">
    <div class="center-block" style="max-width: 45rem; text-align: center; margin-bottom: 1rem">
        <img src="{{ asset('packeton/img/logo.png') }}" style="height: 10rem;" alt="Packeton">
    </div>

    <div class="center-block well-card" style="max-width: 45rem">
        <div style="text-align: center;">
            <h2 class="title">Sign in Demo</h2>
        </div>

        {% if error is defined and error is not empty %}
            <div class="alert alert-warning">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        <div class="alert alert-warning" style="font-size: 1.1em; font-weight: bold">
            This is demo application, please note that the application resets every
            60 minutes and all data will be restored to the default state.
        </div>

        <form action="{{ path('login') }}" method="POST">
            <div class="form-group clearfix">
                <label for="username">{{ 'security.login.username'|trans }}</label>
                <div class="input-group clearfix">
                    <input class="form-control" type="text" id="username" name="_username" value="admin">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                </div>
            </div>

            <div class="form-group clearfix">
                <label for="password">{{ 'security.login.password'|trans }}</label>
                <div class="input-group clearfix">
                    <input class="form-control" type="password" id="password" name="_password" value="123456">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                </div>
            </div>

            <div class="checkbox">
                <a class="pull-right" href="#">Forgot password?</a>

                <label for="remember_me">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" checked="checked" />
                    {{- 'security.login.remember_me'|trans }}
                </label>
            </div>
            <input class="btn btn-block btn-success btn-lg" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </form>
        <hr>

        {% if loginProviders is defined and loginProviders|length > 0 %}
            {% include 'user/login_providers.html.twig' %}
        {% endif %}
    </div>
</div>
{% endblock %}
